@import "tailwindcss/base.css";

html {
	font-family: theme("fontFamily.body");
}

a {
	color: inherit;
	text-decoration: none;

	&:hover {
		text-decoration: none;
		outline: none;
	}

	&.linkHover {
		transition: all 0.3s ease-in-out;

		&:hover {
			color: theme("colors.primary");
		}
	}
}


a[href^="tel:"],
a[href^="fax:"],
.website {
    text-decoration: none;
}

.website:hover {
    text-decoration: underline;
}

p {
  display: block;
}

img {
    max-width: 100%;
    height: auto;
}
