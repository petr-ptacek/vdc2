.fullscreen-container {
	--padding-x: 3rem;

	width: 0;
	height: 0;
	overflow: hidden;
	z-index: 1000;
	position: fixed;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;

	.fullscreen-container-content {
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		background-color: theme("colors.white");
	}

	.fullscreen-container-header {
		flex: 0;
		padding: 1rem var(--padding-x);
		background-color: theme("colors.white");
		box-shadow: 0 0 15px rgba(21, 21, 21, 0.2);
		z-index: 1;
	}

	.fullscreen-container-title {
		font-size: 3rem;
	}

	.fullscreen-container-body {
		flex: 1;
		padding: 0 var(--padding-x);
	}
}

/*OPENED*/
.fullscreen-container.is-open {
	width: 100%;
	height: 100vh;

	.fullscreen-container-content {
	}
}
